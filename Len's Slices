# Setting up the pizza shop
toppings = ["pepperoni", "pineapple", "cheese", "sausage", "olives", "anchovies", "mushrooms"]

prices = [2, 6, 1, 3, 2, 7, 2]

num_two_dollar_slices = prices.count(2)
print(num_two_dollar_slices)

num_pizzas = len(toppings)
print("We sell " + str(num_pizzas) + " different kinds of pizza!")

# Creating a 2D list combining prices + toppings
pizza_and_prices = [[2, "pepperoni"], [6, "pineapple"], [1, "cheese"], [3, "sausage"], [2, "olives"], [7, "anchovies"], [2, "mushrooms"]]
print(pizza_and_prices)

sorted_list = sorted(pizza_and_prices)
print(sorted_list)

cheapest_pizza = sorted_list[0]
priciest_pizza = sorted_list[-1]

# Amending the list - removing/adding new pizzas and prices
sorted_list.pop()

sorted_list.insert(4, [2.5, "peppers"])
print(sorted_list)

three_cheapest = sorted_list[:3]
print(three_cheapest)
